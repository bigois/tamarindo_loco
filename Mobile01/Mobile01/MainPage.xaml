<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile01.MainPage">

    <!-- LISTA -->
    <ListView x:Name="listViewVeiculos">
        <!-- EDITA O TEMPLATE DE LISTA (PARA NÃO EXIBIR O ENDEREÇO DO OBJETO) -->
        <ListView.ItemTemplate>
            <!-- INICIA A EDIÇÃO DO TEMPLATE DE DADOS -->
            <DataTemplate>
                <!-- ADICIONA UMA VIEWCELL -->
                <ViewCell>
                    <!-- DENTRO DE CADA LINHA -->
                    <ViewCell.View>
                        <!-- ADICIONA UM LABEL QUE SERÁ MONTADO A PARTIR DA 
                        PROPRIEDADE ITEMSOURCE COM O IDENTIFICADOR NOME -->
                        <Label Text="{Binding Nome}"/>
                    </ViewCell.View>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
    
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestDrive.Views.AgendamentoPage"
             Title="{Binding Agendamento.Veiculo.Nome}">
    <ContentPage.Content>
        <StackLayout>
            <!-- VISUALIZAÇÃO EM TABELA DO TIPO FORMULÁRIO -->
            <TableView Intent="Form">
                <TableRoot>
                    <!-- BLOCO DE INFORMAÇÕES DO CLIENTE COM BINDING DIRETO NOS ATRIBUTOS -->
                    <TableSection Title="Seus Dados">
                        <EntryCell x:Name="EntryNome"
                                   Label="Nome:"
                                   Keyboard="Text"
                                   Placeholder="Insira seu nome"
                                   Text="{Binding Agendamento.Cliente.Nome}"/>
                        <EntryCell x:Name="EntryTelefone"
                                   Label="Telefone:"
                                   Placeholder="(11) 95422-6833"
                                   Keyboard="Telephone"
                                   Text="{Binding Agendamento.Cliente.Telefone}"/>
                        <EntryCell x:Name="EntryEmail"
                                   Label="E-mail:"
                                   Placeholder="guilherme@outlook.com"
                                   Keyboard="Email"
                                   Text="{Binding Agendamento.Cliente.Email}"/>
                    </TableSection>
                    <!-- BLOCO DE INFORMAÇÕES DE AGENDAMENTO COM BINDING DIRETO NOS ATRIBUTOS -->
                    <TableSection Title="Agendamento">
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Data:" 
                                           VerticalOptions="Center"
                                           Margin="15, 0, 0, 0"/>
                                    <DatePicker x:Name="DateAgendamento"
                                            MinimumDate="{Binding Agendamento.DataAgendamento}"
                                            Date="{Binding Agendamento.DataAgendamento}" 
                                            HorizontalOptions="FillAndExpand"
                                            Margin="0, 0, 8, 0"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Hora:" 
                                           VerticalOptions="Center"
                                           Margin="15, 0, 0, 0"/>
                                    <TimePicker x:Name="TimeHora"
                                                HorizontalOptions="FillAndExpand"
                                                Margin="0, 0, 8, 0"
                                                Time="{Binding Agendamento.HoraAgendamento}"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <!-- BOTÃO PARA CONFIRMAR A AÇÃO DE AGENDAMENTO -->
            <Button x:Name="ButtonAgendar"
                    Text="Agendar"
                    VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
